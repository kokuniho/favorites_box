<% if item.favorited_by?(current_end_user) %>
   <%= link_to item_favorites_path(item), method: :delete, remote: true do %>
   <p style="color:#af9dc0"><i class="fas fa-heart" aria-hidden="true" style="color: #e6c5cf;"></i>
   <%= item.favorites.count %></p>
   <% end %>
<% else %>
   <%= link_to item_favorites_path(item), method: :post, remote: true do %>
    <p style="color:#af9dc0"><i class="far fa-heart" aria-hidden="true" style="color: #e6c5cf;" ></i>
    <%= item.favorites.count %></p>
   <% end %>
<% end %>