

<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-light" style="background-color: #bdd8dd">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><%= image_tag 'Fave', size: '100x100' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if end_user_signed_in? %>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to end_user_path(current_end_user.id), class: 'nav-link text-light' do %>
          <i class="far fa-user"></i> My Page
          <% end %></button>
        </li>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to items_path, class: 'nav-link text-light' do %>
          <i class="far fa-gem"></i> Items Box
          <% end %></button>
        </li>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to end_users_path, class: 'nav-link text-light' do %>
          <i class="fas fa-users"></i> Members
          <% end %></button>
        </li>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to destroy_end_user_session_path, method: :delete, class: 'nav-link text-light' do %>
          <i class="fas fa-sign-out-alt"></i> Log Out
          <% end %></button>
        </li>
        <% else %>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to items_path, class: 'nav-link text-light' do %>
          <i class="far fa-gem"></i> Items Box
          <% end %></button>
        </li>
        <li class="nav-item">
          <button class="fas_button_borderbackround"><%= link_to new_end_user_registration_path, class: 'nav-link text-light' do %>
