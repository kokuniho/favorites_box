<%= link_to(notifications_path) do %>
  <% if unchecked_notifications.any? %>
    <span class="fa-stack">
      <i class= "fas fa-bell fa-stack-2x" style="font-size: 1.5em;"></i>
      <i class= "fas fa-circle n-circle fa-2x"></i>
    </span>
  <% else %>
    <i class="fas fa-bell fa-lg" style="font-size: 1.5em;"></i>
  <% end %>
<% end %>