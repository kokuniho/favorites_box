<div class="card w-50 mx-auto mt-4 shadow-lg">
  <%= link_to item_path do %>
    <%= image_tag @item.get_image, size: "400x400", class:"card-img-top"; %>
  <% end %>
  <div class="card-body">
    <div class="row">
      <div class="col-2">
        <%= image_tag @item.end_user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>

      </div>
      <div class="col-7">
        <p class="card-title">
            <strong><i class="fa-solid fa-gift"></i><span> <%= @item.name %></span></strong>
        </p>
        <p class="card-text">
          <strong><i class="fa-regular fa-thumbs-up"></i></i><span> <%= @item.body %></span></strong>
        </p>
        <span><i class="fas fa-user"></i> By <%= @item.end_user.name %> ｜ </span>
        <%#= link_to "#{@item.favorites.count} いいね", item_path(@item.id), class:"text-dark" %>
      </div>
      <div class="col-3">
        <% if @item.end_user == current_end_user %>
            <td><%= link_to 'Edit', edit_item_path(@item), class: "fas_button_border" %></td>
          
            <td><%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: '本当に消しますか？' }, class: "fas_button_borderbottom" %></td>
                
         <% end %>
      </div>
    </div>
  </div>
</div>