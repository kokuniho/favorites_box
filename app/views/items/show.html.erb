<div class="card w-50 mx-auto mt-4">
  
   <div class="card-body">
  <div class="text-center"><%= link_to items_path do %>
    <%= image_tag @item.get_image, size: "300x300", class:"shadow p-3 mb-5 bg-body round"; %>
  <% end %>
  </div>
 
    <div class="row justify-content-center">
      <div class="col-2 offset-1">
        <%= link_to end_user_path(@end_user.id) do %>
        <%= image_tag @item.end_user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
        <% end %>
      </div>
      <div class="col-6">
         <p class="card-title">
            <% @item.tags.each do |tag| %>
            <span class= 'badge badge-light'><a style="color:#e6c5cf"><%= tag.name %></a></span>
            <% end %>
        </p>
        <p class="card-title">
            <strong><i class="fa-solid fa-gift"></i><span> <%= @item.name %></span></strong>
        </p>
        <p class="card-text">
          <strong><i class="fa-regular fa-thumbs-up"></i></i><span> <%= @item.body %></span></strong>
        </p>
        <span><i class="fas fa-user"></i> By <%= @item.end_user.name %> ｜ </span>
        <%#= link_to "#{@item.favorites.count} いいね", item_path(@item.id), class:"text-dark" %>
      </div>
      <div class="col-3">
        <% if @item.end_user == current_end_user %>
            <br>
            <div><%= link_to 'Edit', edit_item_path(@item), class: "fas_button_border" %></div>
            <br>
            <div><%= link_to 'Delete', item_path(@item), method: :delete, data: { confirm: '本当に消しますか？' }, class: "fas_button_borderbottom" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

                
        