<div class= "text-center text-secondary">
    <%= form_tag items_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :tag_id,
                     options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]),
                     {
                       prompt: 'Tag検索',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %>
</div>
