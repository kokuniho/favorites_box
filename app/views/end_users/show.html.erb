<div class="container">
  <div class="row align-items-center">
    <div class="col-auto mx-auto">
      <h2><%= @end_user.name %> <i class="fas fa-box-open"></i> BOX</h2>
    </div>
  </div>
</div>
 <div class="container">
   <div class="row">
     <div class="col-sm-3">
       <h3>Profile</h3>
       <br>
        <div class="pl">
          <%= image_tag @end_user.get_profile_image(100,100) ,class: "shadow p-3 mb-2 bg-body rounded-circle" %>

          <h5 style="color:#e6c5cf">Name</h5><p><%= @end_user.name %></p>
          <h5 style="color:#e6c5cf">Introduction</h5><p><%= @end_user.introduction %></p>
          <p><% if !(@end_user.name == "guestuser") %>
               <%= link_to edit_end_user_path(@end_user) do %>
               <button class="fas_button_borderradius"><i class="far fa-edit"></i> Edit</button>
              <% end %>
             <% end %></p>
           <p style="color:#e6c5cf">
            follows<%= link_to end_user_followings_path(@end_user.id) do %>
                     <%= @end_user.followings.count %>
                   <% end %> |
            followers<%= link_to end_user_followers_path(@end_user.id) do %>
                      <%= @end_user.followers.count %>
                     <% end %>
          </p>
          <p><% unless current_end_user == @end_user %>
              <% if current_end_user.following?(@end_user) %>
               <%= link_to "フォローを外す", end_user_relationships_path(@end_user.id), method: :delete, class: "fas_button2" %>
              <% else %>
               <%= link_to "フォローする", end_user_relationships_path(@end_user.id), method: :post, class: "fas_button2" %>
              <% end %>
            <% end %>
         </p>
       <p><%= render 'end_users/entry', end_user: @end_user, isRoom: @isRoom, roomId: @roomId, room: @room, entry: @entry %></p>

       </div>
      </div>
      <div class="col-sm-9">
       <h3>Items </h3>
          <%= render 'items/tagshow' %>
          <%= render 'end_users/sort', end_user: @end_user %>
          <table class='table table-inverse'>
            <thead>
            <tr style="color:#bdd8dd">
              <th></th>
              <th>いいね数</th>
              <th>Category</th>
              <th>品名</th>
              <th>Goodポイント</th>
              <!--<th>評価</th>-->
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr style="color:#bdd8dd">
                <td><%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image, size: "50x50" %>
                <% end %>
                </td>
                <td class="favorite_buttons_<%= item.id %>"><%= render 'favorites/favorite', item: item %></td>

                <td>
                    <% item.tags.each do |tag| %>
                    <span class= 'badge badge-light'><a style="color:#e6c5cf"><%= tag.name %></a></span>
                    <% end %>
                </td>
                <td><%= link_to item.name,item, class: "item_#{item.id}" %></td>
                <td><%= item.body %></td>

                <!--<td id="favorite_buttons_<%#= book.id %>"><%#= render "favorites/favorite-btn", book: book %></td>-->
                <!--<td><%#= render "book_comments/counter", book: book %></td>-->
                <!--<td id="star-rate<%#= item.id %>"></td>-->
               </tr>
                  <!--<script>-->
                  <!--  $('#star-rate<%#= item.id%>').raty({-->
                  <!--    size      : 36,-->
                  <!--    starOff   : '<%#= asset_path('star-off.png') %>',-->
                  <!--    starOn    : '<%#= asset_path('star-on.png') %>',-->
                  <!--    half      : false,-->
                  <!--    readOnly: true,-->
                  <!--    score: '<%#= item.star %>',-->
                  <!--  });-->
                  <!--</script>-->

                </div>
            <% end %>
          </tbody>
        </table>
         <div class="row justify-content-center">
          <%= paginate @items %>
         </div>
         <p class="row justify-content-end"><%= link_to new_item_path do %>
          <button class="fas_button_round">New Item</button>
          <% end %></p>
         <br>
      </div>
    </div>
  </div>




